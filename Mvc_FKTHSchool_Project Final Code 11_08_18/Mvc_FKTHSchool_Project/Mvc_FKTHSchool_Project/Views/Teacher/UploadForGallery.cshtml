@model Mvc_FKTHSchool_Project.Models.GalleryUploadModel

@{
    ViewBag.Title = "UploadForGallery";
    Layout = "~/Views/Shared/myLayout_Teacher.cshtml";
}


<script>
$(document).on('invalid-form.validate', 'form', function () {
    var button = $(this).find('input[type="submit"]');
    setTimeout(function () {
        button.removeAttr('disabled');
    }, 1);
});
$(document).on('submit', 'form', function () {
    var button = $(this).find('input[type="submit"]');
    setTimeout(function () {
        button.attr('disabled', 'disabled');
    }, 0);
});
</script>



<div class="g-bg-color--sky-light">
    <div class="container g-padding-y-20--xs g-padding-y-40--sm">

        <center><i style="color:red; font-size:25px;">@ViewBag.Error</i></center>
        <div style="height:15px;"></div>

        @using (Html.BeginForm("UploadForGallery", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
  
        <fieldset>
          
             
            <center><legend><b><h2>Upload Photo for Gallery</h2></b></legend></center>


                    <table align="center" style="width:80%">
                        <tr>
                            <td style="font-size:23px">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.TeacherId, new { style = "font-size: 17px;" })
                                </div>
                            </td>
                            <td style="font-size:23px">
                                <div class="g-margin-b-20--xs">
                                     @Html.TextBox("TeacherId",@User.Identity.Name, new { @class = "form-control s-form-v2__input g-radius--50", @readonly = "readonly" })

                                </div>
                            </td>
                            <td style="font-size:23px">
                                 <b style ="color:red;">@Html.ValidationMessageFor(model => model.TeacherId)</b>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size:23px">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.title, new { style = "font-size: 17px;" })
                                </div>
                            </td>
                            <td style="font-size:23px">
                                <div class="g-margin-b-20--xs">
                                    @Html.TextBoxFor(model => model.title, new { @class = "form-control s-form-v2__input g-radius--50", maxlength = "30", placeholder="Title"})

                                </div>
                            </td>
                            <td style="font-size:23px">
                                <b style="color:red;">@Html.ValidationMessageFor(model => model.title)</b>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size:23px">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.imageDescription, new { style = "font-size: 17px;" })
                                </div>
                            </td>
                            <td style="font-size:23px">
                                <div class="g-margin-b-20--xs">
                                    @Html.TextBoxFor(model => model.imageDescription, new { @class = "form-control s-form-v2__input g-radius--50", maxlength = "100", placeholder="Description" })

                                </div>
                            </td>
                            <td style="font-size:23px">
                                <b style="color:red;">@Html.ValidationMessageFor(model => model.imageDescription)</b>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size:23px">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.file, new { style = "font-size: 17px;" })
                                </div>
                            </td>
                            <td style="font-size:23px">
                                <div class="g-margin-b-20--xs">
                                    @Html.TextBoxFor(model => model.file, new { type = "file", @class = "form-control s-form-v2__input g-radius--50", maxlength = "100" })

                                </div>
                            </td>
                            <td style="font-size:23px">
                                <b style="color:red;">@Html.ValidationMessageFor(model => model.file)</b>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td >
                                <input type="submit" value="Submit" class="text-uppercase s-btn s-btn--md s-btn--primary-bg g-radius--50 g-padding-x-70--xs g-margin-b-20--xs" />
                            </td>
                        </tr>
                    </table>
                  

        </fieldset>
  
        }
    </div>
    </div>

        

