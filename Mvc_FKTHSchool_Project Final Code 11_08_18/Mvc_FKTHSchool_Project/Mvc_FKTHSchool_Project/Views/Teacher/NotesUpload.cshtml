@model Mvc_FKTHSchool_Project.Models.NotesModel

@{
    ViewBag.Title = "NotesUpload";
    Layout = "~/Views/Shared/myLayout_Teacher.cshtml";
}


<script>
$(document).on('invalid-form.validate', 'form', function () {
    var button = $(this).find('input[type="submit"]');
    setTimeout(function () {
        button.removeAttr('disabled');
    }, 1);
});
$(document).on('submit', 'form', function () {
    var button = $(this).find('input[type="submit"]');
    setTimeout(function () {
        button.attr('disabled', 'disabled');
    }, 0);
});
</script>



<div class="g-bg-color--sky-light">
<div class="container g-padding-y-20--xs g-padding-y-40--sm">
    <center><i style="color:red; font-size:25px;"> @ViewBag.Error</i></center>

    @using (Html.BeginForm("NotesUpload", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data", id = "myForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <center><legend><h2><b>Notes Upload</b></h2></legend></center>
            <table align="center" style="width:80%">
                <tr>
                    <td>
                        <div class="editor-label ">
                            @Html.LabelFor(model => model.TeacherId)
                        </div>
                    </td>
                    <td>
                        <div class="g-margin-b-20--xs">
                            @Html.TextBox("TeacherID", @User.Identity.Name, new { @Class = "form-control s-form-v2__input g-radius--50", @readonly = "readonly" })
                            @*@Html.EditorFor(model => model.TeacherId)
            @Html.ValidationMessageFor(model => model.TeacherId)*@
                        </div>
                    </td>
                </tr>
              
                <tr>
                    <td>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.file)
                        </div>
                    </td>
                    <td>
                        <div class="g-margin-b-20--xs">
                            <div class="editor-field">
                                @*<input type="file" name="file" class="form-control s-form-v2__input g-radius--50" />*@
                                @Html.TextBoxFor(model => model.file, new { type = "file", @Class = "form-control s-form-v2__input g-radius--50" })
                               
                            </div>
                        </div>
                    </td>
                    <td style="color:red;">
                        <b>@Html.ValidationMessageFor(model => model.file)</b>
                        @*@Html.ValidationMessage("teacherName")*@
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.OfClass)
                        </div>
                    </td>
                    <td>
                        <div class="g-margin-b-20--xs">
                            <div class="editor-field">
                                @Html.DropDownList("OfClass", ViewBag.classSelection as List<SelectListItem>, new { @Class = "form-control s-form-v2__input g-radius--50" })
                                @*@Html.EditorFor(model => model.OfClass)*@
                                @*@Html.ValidationMessageFor(model => model.OfClass)*@
                            </div>
                        </div>
                    </td>
                    <td style="color:red;">
                        <div class="editor-label">
                            <b> @Html.ValidationMessageFor(model => model.OfClass)</b>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Section)
                        </div>
                    </td>
                    <td>
                        <div class="g-margin-b-20--xs">
                            <div class="editor-field">
                                @Html.DropDownList("Section", ViewBag.sec as List<SelectListItem>, new { @Class = "form-control s-form-v2__input g-radius--50" })
                                @*@Html.TextBoxFor(model => model.RoutineForSection, new { @Class = "form-control s-form-v2__input g-radius--50" })*@

                            </div>
                        </div>
                    </td>
                    <td style="color:red;">
                        <b>
                            @Html.ValidationMessageFor(model => model.Section)
                            @ViewBag.errmsg
                        </b>
                    </td>
                </tr>
                
                <tr>
                    <td>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.NoteSDesc)
                        </div>
                    </td>
                    <td>
                        <div class="g-margin-b-20--xs">
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.NoteSDesc, new { @Class = "form-control s-form-v2__input g-radius--50",placeholder="*(maximum 100 characters)",maxlength="100" })
                                
                            </div>
                        </div>
                    </td>
                    <td style="color:red;">
                        <div class="editor-label">
                           <b> @Html.ValidationMessageFor(model => model.NoteSDesc)</b>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        @*<button type="submit" class="text-uppercase s-btn s-btn--md s-btn--primary-bg g-radius--50 g-padding-x-70--xs g-margin-b-20--xs" onclick="lockoutSubmit(this)" >Submit</button>*@
                        <input type="submit" value="Submit" class="text-uppercase s-btn s-btn--md s-btn--primary-bg g-radius--50 g-padding-x-70--xs g-margin-b-20--xs" />
                      

                    </td>
                </tr>
              
            </table>
        </fieldset>
        
    }

</div>
</div>