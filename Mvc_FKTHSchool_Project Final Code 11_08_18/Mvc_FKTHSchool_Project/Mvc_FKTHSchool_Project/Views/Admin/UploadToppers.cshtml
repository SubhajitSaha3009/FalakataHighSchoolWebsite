@model Mvc_FKTHSchool_Project.Models.UploadToppersModel

@{
    ViewBag.Title = "UploadToppers";
    Layout = "~/Views/Shared/myLayout_Admin.cshtml";
}


<script>
    $(document).on('invalid-form.validate', 'form', function () {
        var button = $(this).find('input[type="submit"]');
        setTimeout(function () {
            button.removeAttr('disabled');
        }, 1);
    });
    $(document).on('submit', 'form', function () {
        var button = $(this).find('input[type="submit"]');
        setTimeout(function () {
            button.attr('disabled', 'disabled');
        }, 0);
    });
</script>



<div class="g-bg-color--sky-light">
    <div class="container g-padding-y-20--xs g-padding-y-40--sm">

        <center><i style="font-size:25px; color:red;"> @ViewBag.Error</i></center>
        @using (Html.BeginForm("UploadToppers", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <center><legend><h2><b>Enter Topper Details</b></h2></legend></center>
                <table align="center" style="width:80%">
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.StdName)
                            </div>
                        </td>
                        <td>
                            <div class="g-margin-b-20--xs">
                                @Html.TextBoxFor(model => model.StdName, new { @class = "form-control s-form-v2__input g-radius--50", placeholder = "*Student Name" })

                            </div>
                        </td>
                        <td style="color:red;">
                            @Html.ValidationMessageFor(model => model.StdName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.OfClass)
                            </div>
                        </td>
                        <td>
                            <div class="g-margin-b-20--xs">
                                @Html.DropDownList("OfClass", ViewBag.classSelection1 as List<SelectListItem>, new { @Class = "form-control s-form-v2__input g-radius--50" })

                            </div>
                        </td>
                        <td style="color:red;">
                            @Html.ValidationMessageFor(model => model.OfClass)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Position)
                            </div>
                        </td>
                        <td>
                            <div class="g-margin-b-20--xs">
                                @Html.DropDownList("Position", ViewBag.PositionSelection as List<SelectListItem>, new { @Class = "form-control s-form-v2__input g-radius--50" })
                            </div>
                        </td>
                        <td style="color:red;">
                            @Html.ValidationMessageFor(model => model.Position)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.File)
                            </div>
                        </td>
                        <td>
                            <div class="g-margin-b-20--xs">

                                @*<input type="file" name="file" class="form-control s-form-v2__input g-radius--50" />*@
                                @Html.TextBoxFor(model => model.File, new { type = "file", @Class = "form-control s-form-v2__input g-radius--50" })


                            </div>
                        </td>
                        <td style="color:red;">
                            @Html.ValidationMessageFor(model => model.File)
                            @*@Html.ValidationMessage("teacherName")*@
                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Submit" class="text-uppercase s-btn s-btn--md s-btn--primary-bg g-radius--50 g-padding-x-70--xs g-margin-b-20--xs" />

                        </td>
                    </tr>

                </table>
            </fieldset>
        }

    </div>
</div>