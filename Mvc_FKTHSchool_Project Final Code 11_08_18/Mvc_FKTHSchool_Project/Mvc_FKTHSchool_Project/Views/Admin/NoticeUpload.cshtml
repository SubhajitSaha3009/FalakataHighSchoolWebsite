@model Mvc_FKTHSchool_Project.Models.NoticeModel

@{
    ViewBag.Title = "NoticeUpload";
    Layout = "~/Views/Shared/myLayout_Admin.cshtml";
}

<script>
    $(document).on('invalid-form.validate', 'form', function () {
        var button = $(this).find('input[type="submit"]');
        setTimeout(function () {
            button.removeAttr('disabled');
        }, 1);
    });
    $(document).on('submit', 'form', function () {
        var button = $(this).find('input[type="submit"]');
        setTimeout(function () {
            button.attr('disabled', 'disabled');
        }, 0);
    });
</script>



<div class="g-bg-color--sky-light">
    <div class="container g-padding-y-20--xs g-padding-y-40--sm">

        <center style="color:red; font-size:25px;"> @ViewBag.Error</center>

        @using (Html.BeginForm("NoticeUpload", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <center><legend><h2><b>Notice Upload</b></h2></legend></center>

                <table align="center" style="width:80%">
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.AdminId)
                            </div>
                        </td>
                        <td>
                            <div class="g-margin-b-20--xs">
                                @Html.TextBox("AdminId", @User.Identity.Name, new { @Class = "form-control s-form-v2__input g-radius--50", @readonly = "readonly" })
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.NoticeTitle)
                            </div>
                        </td>
                        <td>
                            <div class="g-margin-b-20--xs">
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.NoticeTitle, new { @class = "form-control s-form-v2__input g-radius--50", placeholder = "*Notice Title(maximux 80 characters)", maxlength = "80" })

                                </div>
                            </div>
                        </td>
                        <td>
                            <b style="color:red">@Html.ValidationMessageFor(model => model.NoticeTitle)</b>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.NoticePath)
                            </div>
                        </td>
                        <td>
                            <div class="g-margin-b-20--xs">
                                <div class="editor-field">
                                    @*<input type="file" name="File" class="form-control s-form-v2__input g-radius--50" />*@
                                    @Html.TextBoxFor(model => model.NoticePath, new { type = "file", @Class = "form-control s-form-v2__input g-radius--50" })

                                </div>
                            </div>
                        </td>
                        <td>
                            <b style="color:red">@Html.ValidationMessageFor(model => model.NoticePath)</b>
                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Submit" class="text-uppercase s-btn s-btn--md s-btn--primary-bg g-radius--50 g-padding-x-70--xs g-margin-b-20--xs" />

                        </td>
                    </tr>


                </table>
            </fieldset>
        }

    </div>
</div>
