@model IEnumerable<Mvc_FKTHSchool_Project.Models.ViewGalleryModel>

@{
    ViewBag.Title = "ViewGallery";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

<!--promo block-->
<div class="g-bg-position--center js__parallax-window" style="background: url(../../Content/Template/img/student1.jpg) 50% 0 no-repeat fixed;height:320px">
    <div class="g-container--md  g-padding-y-150--xs g-text-center--xs">
        <p class="text-uppercase g-font-size-46--xs g-font-size-50--lg g-font-weight--700 g-color--white g-letter-spacing--2 g-margin-b-25--xs" style="margin-left:28%;margin-top:7%;">Photo Gallery</p>

    </div>
</div>



